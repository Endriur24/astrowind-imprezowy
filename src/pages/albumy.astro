---
import Layout from '~/layouts/PageLayout.astro';
import { Picture } from 'astro:assets';

import Hero from '~/components/widgets/Hero.astro';

import studniowkiCover from '~/assets/images/covers/studniowki_cover.jpg';
import kluboweCover from '~/assets/images/covers/klubowe_cover.jpg';
import konferencjeCover from '~/assets/images/covers/konferencje_cover.jpg';
import imprezyStudenckieCover from '~/assets/images/covers/imprezy_studenckie_cover.jpg';
import repoSpecjalneCover from '~/assets/images/covers/repo_specjalne_cover.jpg';

const metadata = {
  title: 'Albumy - ImprezowyFotograf',
  description: 'Przeglądaj albumy ze zdjęciami z różnych wydarzeń. Dostęp po haśle dla gości.',
};
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Skontaktuj się z nami',
        href: '/kontakt',
      },
    ]}
    image={{ 
      src: 'https://images.unsplash.com/photo-1529156069898-49953e39b3ac?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80', 
      alt: 'Albumy zdjęć' 
    }}
  >
  <Fragment slot="title">
    Albumy / Galerie
  </Fragment>

  <Fragment slot="subtitle">
    Przeglądaj nasze galerie zdjęć z różnych wydarzeń. Kliknij okładkę aby zobaczyć pełną galerię.
  </Fragment>
  </Hero>

  <!-- Albums Section -->
  <section class="py-16 bg-white dark:bg-gray-900">
    <div class="container px-4 mx-auto">
      <div class="max-w-4xl mx-auto">
        



        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <a href="/portfolio#studniowka" class="group">
            <div class="relative overflow-hidden rounded-xl group-hover:shadow-2xl transition-all duration-300">
              <Picture src={studniowkiCover} alt="Studniówki" class="w-full h-64 object-cover" formats={['avif', 'webp']} />
              <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end p-6">
                <div class="text-white">
                  <h3 class="text-2xl font-bold mb-2">Studniówki</h3>
                  <p class="opacity-90">Galerie ze studniówek</p>
                </div>
              </div>
            </div>
          </a>
          <a href="/portfolio#dyskoteka" class="group">
            <div class="relative overflow-hidden rounded-xl group-hover:shadow-2xl transition-all duration-300">
              <Picture src={kluboweCover} alt="Dyskoteki / Kluby" class="w-full h-64 object-cover" formats={['avif', 'webp']} />
              <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end p-6">
                <div class="text-white">
                  <h3 class="text-2xl font-bold mb-2">Dyskoteki / Kluby</h3>
                  <p class="opacity-90">Zdjęcia z imprez klubowych</p>
                </div>
              </div>
            </div>
          </a>
          <a href="/portfolio#konferencja" class="group">
            <div class="relative overflow-hidden rounded-xl group-hover:shadow-2xl transition-all duration-300">
              <Picture src={konferencjeCover} alt="Konferencje" class="w-full h-64 object-cover" formats={['avif', 'webp']} />
              <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end p-6">
                <div class="text-white">
                  <h3 class="text-2xl font-bold mb-2">Konferencje</h3>
                  <p class="opacity-90">Reportaże konferencyjne</p>
                </div>
              </div>
            </div>
          </a>
          <a href="/portfolio#studenckie" class="group">
            <div class="relative overflow-hidden rounded-xl group-hover:shadow-2xl transition-all duration-300">
              <Picture src={imprezyStudenckieCover} alt="Wydarzenia studenckie" class="w-full h-64 object-cover" formats={['avif', 'webp']} />
              <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end p-6">
                <div class="text-white">
                  <h3 class="text-2xl font-bold mb-2">Wydarzenia studenckie</h3>
                  <p class="opacity-90">Imprezy i bale studenckie</p>
                </div>
              </div>
            </div>
          </a>
          <a href="/portfolio#specjalne" class="group">
            <div class="relative overflow-hidden rounded-xl group-hover:shadow-2xl transition-all duration-300">
              <Picture src={repoSpecjalneCover} alt="Reportaże specjalne" class="w-full h-64 object-cover" formats={['avif', 'webp']} />
              <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end p-6">
                <div class="text-white">
                  <h3 class="text-2xl font-bold mb-2">Reportaże specjalne</h3>
                  <p class="opacity-90">Projekty specjalne</p>
                </div>
              </div>
            </div>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Help Section -->
  <section class="py-16 bg-gray-50 dark:bg-gray-800">
    <div class="container px-4 mx-auto text-center">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">Masz problem z dostępem?</h2>
      <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">Skontaktuj się z nami, a pomożemy Ci uzyskać dostęp do Twojego albumu</p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/kontakt" class="px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
          Skontaktuj się z nami
        </a>
        <a href="tel:+48885195599" class="px-6 py-3 bg-gray-200 dark:bg-gray-700 text-gray-900 dark:text-white rounded-lg hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors">
          Zadzwoń: +48 885 195 599
        </a>
      </div>
    </div>
  </section>
</Layout>
