---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Fotograf na Konferencje Kraków - Profesjonalna Fotografia Firmowa',
  description: 'Profesjonalny fotograf na konferencje, imprezy firmowe i wyjazdy integracyjne w Krakowie. Fotografia biznesowa najwyższej jakości.',
};
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Zarezerwuj fotografa',
        href: '/kontakt',
      },
      {
        variant: 'secondary',
        text: 'Zobacz portfolio',
        href: '/portfolio',
      },
    ]}
    image={{ 
      src: 'https://images.unsplash.com/photo-1511795409834-ef04bbd61622?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80', 
      alt: 'Fotograf na konferencje' 
    }}
  >
    <Fragment slot="title">
      Fotograf na Konferencje i Eventy Firmowe
    </Fragment>

    <Fragment slot="subtitle">
      Profesjonalna fotografia biznesowa na konferencje, wyjazdy integracyjne i imprezy firmowe. Podkreśl wizerunek swojej firmy!
    </Fragment>
  </Hero>

  <!-- Main Content -->
  <section class="py-16 bg-white dark:bg-gray-900">
    <div class="container px-4 mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-6">Profesjonalizm biznesowy</h2>
          <div class="space-y-4">
            <div class="flex items-start space-x-3">
              <div class="w-6 h-6 bg-blue-100 dark:bg-blue-900 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                <svg class="w-3 h-3 text-blue-600 dark:text-blue-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-1">Doświadczenie biznesowe</h3>
                <p class="text-gray-600 dark:text-gray-400">Wieloletnie doświadczenie w fotografii konferencyjnej i korporacyjnej.</p>
              </div>
            </div>
            
            <div class="flex items-start space-x-3">
              <div class="w-6 h-6 bg-blue-100 dark:bg-blue-900 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                <svg class="w-3 h-3 text-blue-600 dark:text-blue-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-1">Dyskrecja</h3>
                <p class="text-gray-600 dark:text-gray-400">Niezauważalna dokumentacja bez zakłócania przebiegu wydarzenia.</p>
              </div>
            </div>
            
            <div class="flex items-start space-x-3">
              <div class="w-6 h-6 bg-blue-100 dark:bg-blue-900 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                <svg class="w-3 h-3 text-blue-600 dark:text-blue-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-1">Wizerunek firmy</h3>
                <p class="text-gray-600 dark:text-gray-400">Zdjęcia, które budują profesjonalny wizerunek Twojej marki.</p>
              </div>
            </div>
          </div>
        </div>
        
        <div>
          <img src="https://images.unsplash.com/photo-1542744173-8207a2e18c7?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1000&q=80" alt="Fotografia konferencyjna" class="rounded-lg shadow-lg">
        </div>
      </div>
    </div>
  </section>

  <!-- Services Details -->
  <section class="py-16 bg-gray-50 dark:bg-gray-800">
    <div class="container px-4 mx-auto">
      <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-12 text-center">Nasze usługi biznesowe</h2>
      
      <Features
        items={[
          {
            title: 'Konferencje',
            description: 'Profesjonalna dokumentacja konferencji branżowych i wydarzeń korporacyjnych.',
            icon: 'tabler:presentation',
          },
          {
            title: 'Wyjazdy integracyjne',
            description: 'Fotografia z wyjazdów firmowych i imprez integracyjnych dla pracowników.',
            icon: 'tabler:mountain',
          },
          {
            title: 'Imprezy firmowe',
            description: 'Obsługa fotograficzna bankietów, gal i imprez firmowych.',
            icon: 'tabler:building',
          },
          {
            title: 'Spotkania biznesowe',
            description: 'Dokumentacja ważnych spotkań biznesowych i negocjacji.',
            icon: 'tabler:handshake',
          },
          {
            title: 'Targi i wystawy',
            description: 'Fotografia z targów, wystaw i eventów branżowych.',
            icon: 'tabler:shopping-cart',
          },
          {
            title: 'Szkolenia',
            description: 'Zdjęcia ze szkoleń, warsztatów i sesji trainingowych.',
            icon: 'tabler:school',
          },
        ]}
      />
    </div>
  </section>

  <!-- Approach -->
  <section class="py-16 bg-white dark:bg-gray-900">
    <div class="container px-4 mx-auto">
      <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-12 text-center">Nasze podejście</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="w-16 h-16 bg-blue-100 dark:bg-blue-900 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 4a1 1 0 000 2v4a1 1 0 002 0h4a1 1 0 002-2V6a1 1 0 00-2-2H9z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">Planowanie</h3>
          <p class="text-gray-600 dark:text-gray-400">Szczegółowe omówienie przebiegu i harmonogramu wydarzenia przed jego rozpoczęciem.</p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-blue-100 dark:bg-blue-900 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">Profesjonalizm</h3>
          <p class="text-gray-600 dark:text-gray-400">Nienaganne stroje, dyskrecja i profesjonalne podejście do biznesu.</p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-blue-100 dark:bg-blue-900 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13v8m0 0l3-3m-3 3l-3-3m3 3v5m-3-5h6"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">Elastyczność</h3>
          <p class="text-gray-600 dark:text-gray-400">Dopasowanie do potrzeb klienta i elastyczne podejście do harmonogramu.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Equipment -->
  <section class="py-16 bg-gray-50 dark:bg-gray-800">
    <div class="container px-4 mx-auto">
      <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-12 text-center">Zawodowy sprzęt</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="text-center">
          <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900 rounded-lg flex items-center justify-center mx-auto mb-3">
            <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0118.07 6H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Aparaty pro</h3>
          <p class="text-gray-600 dark:text-gray-400">Sprzęt profesjonalny do fotografii biznesowej</p>
        </div>
        
        <div class="text-center">
          <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900 rounded-lg flex items-center justify-center mx-auto mb-3">
            <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Obiektywy</h3>
          <p class="text-gray-600 dark:text-gray-400">Szeroki zakres ogniskowych dla różnych warunków</p>
        </div>
        
        <div class="text-center">
          <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900 rounded-lg flex items-center justify-center mx-auto mb-3">
            <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Oświetlenie</h3>
          <p class="text-gray-600 dark:text-gray-400">Profesjonalne lampy studyjne i reporterskie</p>
        </div>
        
        <div class="text-center">
          <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900 rounded-lg flex items-center justify-center mx-auto mb-3">
            <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7m0 0h.01M12 19v4m0-4h.01M16 19h4"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Akcesoria</h3>
          <p class="text-gray-600 dark:text-gray-400">Wszystko czego potrzeba do idealnej sesji</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Pricing -->
  <section class="py-16 bg-white dark:bg-gray-900">
    <div class="container px-4 mx-auto">
      <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-12 text-center">Cennik usług firmowych</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="bg-gray-50 dark:bg-gray-800 rounded-lg p-8 border border-gray-200 dark:border-gray-700">
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-4">Konferencja</h3>
          <p class="text-gray-600 dark:text-gray-400 mb-6">Dokumentacja konferencji</p>
          <ul class="space-y-2 mb-6">
            <li class="flex items-center text-gray-600 dark:text-gray-400">
              <svg class="w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              Do 8 godzin dokumentacji
            </li>
            <li class="flex items-center text-gray-600 dark:text-gray-400">
              <svg class="w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              200 zdjęć po obróbce
            </li>
            <li class="flex items-center text-gray-600 dark:text-gray-400">
              <svg class="w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              Szybka dostawa
            </li>
          </ul>
          <p class="text-2xl font-bold text-gray-900 dark:text-white mb-4">1500 zł</p>
        </div>
        
        <div class="bg-blue-600 text-white rounded-lg p-8 border-2 border-blue-600 relative">
          <div class="absolute -top-3 left-1/2 transform -translate-x-1/2 bg-blue-600 text-white px-3 py-1 text-sm rounded-full">
            Pakiet firmowy
          </div>
          <h3 class="text-xl font-bold mb-4">Impreza firmowa</h3>
          <p class="mb-6 opacity-90">Kompleksowa obsługa eventów firmowych</p>
          <ul class="space-y-2 mb-6">
            <li class="flex items-center">
              <svg class="w-4 h-4 text-white mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              Do 6 godzin obsługi
            </li>
            <li class="flex items-center">
              <svg class="w-4 h-4 text-white mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              300 zdjęć po obróbce
            </li>
            <li class="flex items-center">
              <svg class="w-4 h-4 text-white mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              Zdjęcia grupowe i portrety
            </li>
            <li class="flex items-center">
              <svg class="w-4 h-4 text-white mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              Galeria online w 48h
            </li>
          </ul>
          <p class="text-2xl font-bold mb-4">2000 zł</p>
        </div>
        
        <div class="bg-gray-50 dark:bg-gray-800 rounded-lg p-8 border border-gray-200 dark:border-gray-700">
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-4">Wyjazd integracyjny</h3>
          <p class="text-gray-600 dark:text-gray-400 mb-6">Obsługa wyjazdów firmowych</p>
          <ul class="space-y-2 mb-6">
            <li class="flex items-center text-gray-600 dark:text-gray-400">
              <svg class="w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              Do 10 godzin dokumentacji
            </li>
            <li class="flex items-center text-gray-600 dark:text-gray-400">
              <svg class="w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              400+ zdjęć po obróbce
            </li>
            <li class="flex items-center text-gray-600 dark:text-gray-400">
              <svg class="w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              Zdjęcia z zabawami i aktywnościami
            </li>
          </ul>
          <p class="text-2xl font-bold text-gray-900 dark:text-white mb-4">2500 zł</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <CallToAction
    title="Zarezerwuj fotografa na wydarzenie firmowe"
    subtitle="Skontaktuj się z nami i zarezerwuj profesjonalnego fotografa na konferencję, imprezę firmową lub wyjazd integracyjny."
    actions={[
      {
        variant: 'primary',
        text: 'Zarezerwuj teraz',
        href: '/kontakt',
      },
      {
        variant: 'secondary',
        text: 'Zobacz portfolio',
        href: '/portfolio',
      },
    ]}
  />
</Layout>
