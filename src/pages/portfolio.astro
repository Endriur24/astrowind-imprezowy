---
import Layout from '~/layouts/PageLayout.astro';
import FolderGallery from '~/components/widgets/FolderGallery.astro';

const metadata = {
  title: 'Portfolio - ImprezowyFotograf',
  description: 'Zobacz nasze najlepsze zdjęcia z eventów, studniówek, balów i innych imprez.',
};
---

<Layout metadata={metadata}>

  <!-- Galeria klubowa -->
  <FolderGallery 
    folderPath="portfolio/dyskoteka" 
    title="Zdjęcia klubowe" 
    subtitle="Najlepsze ujęcia z imprez klubowych i koncertów"
    columns={4}
  />

  <!-- Okładki portfolio -->
  <FolderGallery 
    folderPath="portfolio/koncert" 
    title="Koncerty" 
    subtitle="Relacje z koncertów i festiwali muzycznych"
    columns={4}
  />
</Layout>