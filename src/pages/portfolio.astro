---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';

const metadata = {
  title: 'Portfolio - ImprezowyFotograf',
  description: 'Zobacz nasze najlepsze zdjęcia z eventów, studniówek, balów i innych imprez.',
};
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Zobacz ofertę',
        href: '/oferta',
      },
    ]}
    image={{ 
      src: 'https://images.unsplash.com/photo-1529156069898-49953e39b3ac?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80', 
      alt: 'Nasze portfolio' 
    }}
  >
    <Fragment slot="title">
      Nasze Portfolio
    </Fragment>

    <Fragment slot="subtitle">
      Zobacz najlepsze chwile uchwycone przez nasz obiektyw. Każde zdjęcie opowiada historię.
    </Fragment>
  </Hero>

  <!-- Gallery Section -->
  <section class="py-16 bg-white dark:bg-gray-900">
    <div class="container px-4 mx-auto">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">Wybrane realizacje</h2>
        <p class="text-lg text-gray-600 dark:text-gray-400">Przeglądaj nasze najlepsze zdjęcia z różnych wydarzeń</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Gallery items will be added here -->
        <div class="relative overflow-hidden rounded-lg group cursor-pointer">
          <img src="https://images.unsplash.com/photo-1529156069898-49953e39b3ac?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=400&q=80" alt="Event photography" class="w-full h-64 object-cover group-hover:scale-105 transition-transform duration-300" />
          <div class="absolute inset-0 bg-black bg-opacity-50 flex items-end p-4 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
            <div class="text-white">
              <h3 class="text-lg font-semibold">Studniówka 2024</h3>
              <p class="text-sm">LO Kraków</p>
            </div>
          </div>
        </div>
        
        <div class="relative overflow-hidden rounded-lg group cursor-pointer">
          <img src="https://images.unsplash.com/photo-1511795409834-ef04bbd61622?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=400&q=80" alt="Conference photography" class="w-full h-64 object-cover group-hover:scale-105 transition-transform duration-300" />
          <div class="absolute inset-0 bg-black bg-opacity-50 flex items-end p-4 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
            <div class="text-white">
              <h3 class="text-lg font-semibold">Konferencja Tech</h3>
              <p class="text-sm">Kraków 2024</p>
            </div>
          </div>
        </div>
        
        <div class="relative overflow-hidden rounded-lg group cursor-pointer">
          <img src="https://images.unsplash.com/photo-1533174072545-7a4b7b09688c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=400&q=80" alt="Party photography" class="w-full h-64 object-cover group-hover:scale-105 transition-transform duration-300" />
          <div class="absolute inset-0 bg-black bg-opacity-50 flex items-end p-4 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
            <div class="text-white">
              <h3 class="text-lg font-semibold">Impreza Firmowa</h3>
              <p class="text-sm">Corporate Event 2024</p>
            </div>
          </div>
        </div>
        
        <div class="relative overflow-hidden rounded-lg group cursor-pointer">
          <img src="https://images.unsplash.com/photo-1540555700478-4be289fbecef?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=400&q=80" alt="Concert photography" class="w-full h-64 object-cover group-hover:scale-105 transition-transform duration-300" />
          <div class="absolute inset-0 bg-black bg-opacity-50 flex items-end p-4 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
            <div class="text-white">
              <h3 class="text-lg font-semibold">Koncert</h3>
              <p class="text-sm">Live Music 2024</p>
            </div>
          </div>
        </div>
        
        <div class="relative overflow-hidden rounded-lg group cursor-pointer">
          <img src="https://images.unsplash.com/photo-1469371670407-4f0116a3991a?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=400&q=80" alt="Birthday photography" class="w-full h-64 object-cover group-hover:scale-105 transition-transform duration-300" />
          <div class="absolute inset-0 bg-black bg-opacity-50 flex items-end p-4 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
            <div class="text-white">
              <h3 class="text-lg font-semibold">18. Urodziny</h3>
              <p class="text-sm">Private Party 2024</p>
            </div>
          </div>
        </div>
        
        <div class="relative overflow-hidden rounded-lg group cursor-pointer">
          <img src="https://images.unsplash.com/photo-1516450360452-9312f5e86fc7?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=400&q=80" alt="Wedding photography" class="w-full h-64 object-cover group-hover:scale-105 transition-transform duration-300" />
          <div class="absolute inset-0 bg-black bg-opacity-50 flex items-end p-4 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
            <div class="text-white">
              <h3 class="text-lg font-semibold">Wesele</h3>
              <p class="text-sm">Wedding Photography</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
