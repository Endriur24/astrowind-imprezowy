---
import Layout from '~/layouts/PageLayout.astro';
import ImageGrid from '~/components/widgets/ImageGrid.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Oferta - ImprezowyFotograf',
  description: 'Zrobimy dla Ciebie zdjęcia na każdej imprezie! Wykonujemy zdjęcia na studniówkach, balach, dyskotekach, konferencjach oraz innych wydarzeniach.',
};
---

<Layout metadata={metadata}>

  <ImageGrid
    title="Nasza Oferta"
    columns={3}
    items={[
      {
        image: {
          src: '/assets/portfolio/studniowka/zdjecia_studniowkowe_032_thumbnail.jpg',
          alt: 'Fotograf na studniówkę',
          width: 400,
          height: 300
        },
        title: 'Fotograf na studniówkę / Fotograf na komers',
        description: 'Fotografujemy i nagrywamy materiały wideo na studniówkach, komersach oraz innych podobnych wydarzeniach organizowanych w szkołach.',
        link: {
          text: 'Sprawdź ofertę!',
          href: '/oferta/fotograf-na-studniowke'
        }
      },
      {
        image: {
          src: '/assets/portfolio/studenckie/zdjecia_imprezy_studenckie_072_thumbnail.jpg',
          alt: 'Fotograf na imprezę studencką',
          width: 400,
          height: 300
        },
        title: 'Fotograf na imprezę studencką (bal, dyskotekę, rajd, itp.)',
        description: 'Współpracujemy z Uczelnianymi i Wydziałowymi Radami Samorządu Studenckiego, tworząc reportaże z różnego rodzaju imprez studenckich.',
        link: {
          text: 'Sprawdź ofertę!',
          href: '/oferta/fotograf-na-wydarzenia-studenckie'
        }
      },
      {
        image: {
          src: '/assets/portfolio/dyskoteka/zdjecia_klubowe_058_thumbnail.jpg',
          alt: 'Fotograf klubowy',
          width: 400,
          height: 300
        },
        title: 'Fotograf do klubu / Fotograf koncertowy',
        description: 'Fotografia klubowa zdecydowanie wpisuje się na listę naszych ulubionych zleceń. Fotografujemy też koncerty - i zdarza się robić jedno i drugie naraz!',
        link: {
          text: 'Sprawdź ofertę!',
          href: '/oferta/fotograf-klubowy-koncertowy-krakow'
        }
      },
      {
        image: {
          src: '/assets/portfolio/konferencje/zdjecia_z_konferencji_016_thumbnail.jpg',
          alt: 'Fotograf na konferencję',
          width: 400,
          height: 300
        },
        title: 'Fotograf na konferencję / wydarzenie branżowe',
        description: 'Potrzebujesz reportaż z konferencji lub innego eventu branżowego? Nie ma sprawy, zajmiemy się tym! Zdjęcia, filmy, streamingi i inne usługi specjalne!',
        link: {
          text: 'Sprawdź ofertę!',
          href: '/oferta/fotograf-na-konferencje-krakow'
        }
      },
      {
        image: {
          src: '/assets/portfolio/covers/eventowy_cover_thumbnail.jpg',
          alt: 'Fotograf na event firmowy',
          width: 400,
          height: 300
        },
        title: 'Fotograf na event firmowy',
        description: 'Tworzymy relacje fotograficzne oraz materiały wideo dla klienta biznesowego - z różnego rodzaju wydarzeń, takich jak np. urodziny firmy, otwarcie biura, szkolenia, prelekcje, spotkania firmowe itp.',
        link: {
          text: 'Sprawdź ofertę!',
          href: '/oferta/fotograf-eventowy-krakow'
        }
      },
      {
        image: {
          src: '/assets/portfolio/covers/urodzinowe_cover_thumbnail.jpg',
          alt: 'Fotograf na urodziny',
          width: 400,
          height: 300
        },
        title: 'Fotograf na osiemnastkę / urodziny',
        description: 'Wykonujemy reportaże na imprezach okolicznościowych - m.in. osiemnastkach oraz innych imprezach organizowanych w gronie znajomych, rodziny.',
        link: {
          text: 'Sprawdź ofertę!',
          href: '/oferta/fotograf-na-urodziny-krakow'
        }
      },
      {
        image: {
          src: '/assets/portfolio/covers/zdjecia_live_cover_thumbnail.jpg',
          alt: 'Zdjęcia live',
          width: 400,
          height: 300
        },
        title: 'Zdjęcia "live" (dostarczane w czasie rzeczywistym)',
        description: 'Dostarczamy zdjęcia w czasie trwania eventu. Oferujemy różne rozwiązania i indywidualne podejście w zależności od wymagań konkretnego projektu.',
        link: {
          text: 'Sprawdź ofertę!',
          href: '/oferta/zdjecia-live'
        }
      },
      {
        image: {
          src: '/assets/portfolio/specjalne/repo_specjalne_023_thumbnail.jpg',
          alt: 'Reportaże specjalne',
          width: 400,
          height: 300
        },
        title: 'Reportaże i projekty specjalne',
        description: 'Robimy "repo" z bardzo różnego rodzaju wydarzeń, wliczając w to m.in. konkursy studenckich zespołów konstruktorskich (tzw. kół naukowych), zawodów sportowych, zjazdów samochodowych i wielu innych.',
        link: {
          text: 'Sprawdź ofertę!',
          href: '/oferta/reportaze-i-projekty-specjalne'
        }
      },
      {
        image: {
          src: '/assets/portfolio/covers/dodatkowe_uslugi_cover_thumbnail.jpg',
          alt: 'Dodatkowe usługi',
          width: 400,
          height: 300
        },
        title: 'Dodatkowe usługi foto/wideo',
        description: 'Jeśli na swoje wydarzenie potrzebujesz np. fotobudki, ścianki fotograficznej z oświetleniem lub jakieś "dziwnej" usługi foto/wideo (np. nagranie VHS) to prawdopodobnie możemy Ci pomóc.',
        link: {
          text: 'Sprawdź ofertę!',
          href: '/oferta/dodatkowe-uslugi-fotograficzne'
        }
      },
      {
        image: {
          src: '/assets/portfolio/covers/video_eventowe_cover_thumbnail.jpg',
          alt: 'Wideo eventowe',
          width: 400,
          height: 300
        },
        title: 'Wideo eventowe (i nie tylko)',
        description: 'Robimy nie tylko zdjęcia! Jesteśmy również otwarci na potrzeby marketingu wideo. Nagrywamy i montujemy relacje z różnego rodzaju wydarzeń, a także przygotowujemy spoty promocyjne.',
        link: {
          text: 'Sprawdź ofertę!',
          href: '/oferta/video-eventowe'
        }
      },
      {
        image: {
          src: '/assets/portfolio/covers/streaming_video_cover_thumbnail.jpg',
          alt: 'Streaming wideo',
          width: 400,
          height: 300
        },
        title: 'Streaming wideo',
        description: 'Jeśli wideo, to również live! Realizujemy na żywo wydarzenia w formie online i hybrydowej - webinary, prelekcje, konferencje, wywiady. Jeśli tego trzeba, to ogarniamy również realizację audio.',
        link: {
          text: 'Sprawdź ofertę!',
          href: '/oferta/streaming-video'
        }
      },
      {
        image: {
          src: '/assets/portfolio/covers/szkolenia_cover_thumbnail.jpg',
          alt: 'Szkolenia foto/wideo',
          width: 400,
          height: 300
        },
        title: 'Szkolenia dla fotografów i filmowców',
        description: 'Szkolimy m.in. z zakresu błysku reporterskiego, edycji zdjęć w LrC, montażu wideo, oświetlania planów zdjęciowych, procesu zimnego i C-41 oraz innych tematów foto/wideo.',
        link: {
          text: 'Sprawdź ofertę!',
          href: '/oferta/szkolenia-foto-wideo'
        }
      }
    ]}
  />

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Napisz do nas',
        href: '/kontakt'
      },
      {
        variant: 'secondary',
        text: 'Zadzwoń: +48 885 195 599',
        href: 'tel:+48885195599'
      }
    ]}
  >
    <Fragment slot="title">
      Masz pytania?
    </Fragment>
    <Fragment slot="subtitle">
      Skontaktuj się z nami, aby omówić szczegóły oferty dopasowanej do Twoich potrzeb
    </Fragment>
  </CallToAction>
</Layout>
